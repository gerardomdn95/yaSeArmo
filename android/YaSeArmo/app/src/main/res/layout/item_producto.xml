<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="100dp"
                android:layout_width="60dp"
                android:layout_weight="1"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_producto_img"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="6dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/item_producto_titulo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre del producto"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_producto_descripcion"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:text="Aquí va todo ese choro mareador locochón"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/item_producto_star_1"
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/item_producto_star_2"
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/item_producto_star_3"
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/item_producto_star_4"
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/item_producto_star_5"
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="fill_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


</LinearLayout>